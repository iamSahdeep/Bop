<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/albumArtNoti"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/songNameNoti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="Song Name"
                android:textColor="#000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/stopNoti"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_cancel"
                android:tint="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/ArtistNameNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="Artist"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/AlbumNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:text="Album"
            android:textColor="#A2A2A2"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previousNoti"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_previous"
                android:tint="@color/black" />

            <TextView
                android:id="@+id/bedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:text="  "
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/pauseNoti"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pause"
                android:tint="@color/black" />

            <TextView
                android:id="@+id/carParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:text="  "
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/skipNoti"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:src="@drawable/ic_skip"
                android:tint="@color/black" />

            <TextView
                android:id="@+id/swimmingPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>